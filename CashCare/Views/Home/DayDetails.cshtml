@using CashCare.ViewModels
@model IList<DailyExpense>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="accordion" id="accordionId">
    <div class="accordion-item">
        <h2 class="accordion-header" id="headerId">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseId" aria-expanded="true" aria-controls="collapseId">
                Week 20.05.2024 - 26.05.2024
            </button>
        </h2>
        <div id="collapseId" class="accordion-collapse collapse show" aria-labelledby="headerId" data-bs-parent="#accordionId">
            <div class="accordion-body">
                <strong>You have $400 left for the rest of the month</strong>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">income</th>
                            <th scope="col">Expenses</th>
                            <th scope="col">Saving</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            for (var day = 1; day <= 7; day++)
                            {
                                <tr>
                                    <th scope="row">Day @day</th>
                                    <td>0$</td>
                                    <td>30$</td>
                                    <td>10$</td>
                                </tr>
                            }
                            <tr>
                                <th scope="row">Result</th>
                                <td><b>0$</b></td>
                                <td><b>210$</b></td>
                                <td><b>70$</b></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
