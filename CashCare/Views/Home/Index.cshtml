@{
    ViewData["Title"] = "Home Page";
}
@{
    var accordionId = "accordionExample";
    for (var i = 0; i <= 12; i++)
    {
        var headerId = $"heading{i}";
        var collapseId = $"collapse{i}";
        var buttonId = $"button{i}";
        <div class="accordion" id="@accordionId">
            <div class="accordion-item">
                <h2 class="accordion-header" id="@headerId">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseId" aria-expanded="true" aria-controls="@collapseId">
                        Month @i
                    </button>
                </h2>
                <div id="@collapseId" class="accordion-collapse collapse" aria-labelledby="@headerId" data-bs-parent="#@accordionId">
                    <div class="accordion-body">
                        <strong>You Save 400 euro this Month. congratulation</strong>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">income</th>
                                    <th scope="col">Expenses</th>
                                    <th scope="col">Saving</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    for (var week = 1; week <= 4; week++)
                                    {
                                        <tr>
                                            <th scope="row">Week @week</th>
                                            <td>0$</td>
                                            <td>80$</td>
                                            <td>100$</td>
                                            <td><a href="/Home/WeekDetails">Details </a></td>
                                        </tr>
                                    }
                                    <tr>
                                        <th scope="row">Result</th>
                                        <td><b>0$</b></td>
                                        <td><b>320$</b></td>
                                        <td><b>400$</b></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
}

