@using CashCare.ViewModels;
@model DailyExpenseViewModel

@{
    var dailyLimit = (Model.currentWallet.NettIncomeAfter  / 30);
    var dailyLeft = dailyLimit - Model.todaytotalExpense;
}
<form method="post" asp-controller="Home" asp-action="CreateDailyExpense" enctype="multipart/form-data">
<div class="card">
    <div class="card-header">
            <h5>Add new expense for today  <span style="float:right">left to spend today @dailyLeft.ToString("F2") / @dailyLimit.ToString("F2") $ </span></h5>
            
    </div>
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md">
                <div class="form-floating" style="padding-bottom:20px">
                    <input asp-for="currentExpense.Amount" class="form-control" id="floatingInputGridAmount" placeholder="200$" oninput="validateDecimalInput(this)" value="">
                    <label for="floatingInputGridAmount">Amount</label>
                </div>
            </div>
            <div class="col-md">
                <div class="form-floating">
                    <input asp-for="currentExpense.Description" class="form-control" id="floatingInputGridDescription" placeholder="">
                    <label for="floatingInputGridDescription">Description: ex. Kebab, Rewe einkauf, friseur...</label>
                </div>
            </div>
            <div class="col-md">
                <button name="BtnAction" style="width:100%; height:calc(3.5rem + 2px);" class="btn btn-success">Save</button>
            </div>
        </div>
    </div>
</div>

@{
    var accordionId = "accordionExample";

    var headerId = $"heading";
    var collapseId = $"collapse";
    var buttonId = $"button";
    <div class="accordion" id="@accordionId">
        <div class="accordion-item">
            <h2 class="accordion-header" id="@headerId">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseId" aria-expanded="true" aria-controls="@collapseId">
                        current month - @(Model.currentWallet.NettIncomeAfter - Model.ExpenseSomme) $ / @Model.currentWallet.NettIncomeAfter $
                </button>
            </h2>
            <div id="@collapseId" class="accordion-collapse collapse show" aria-labelledby="@headerId" data-bs-parent="#@accordionId">
                <div class="accordion-body">
                  
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Expenses</th>
                                <th scope="col">Saving</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                                @{
                                    foreach(var expense in Model.ListexpensePerDay)
                                    {


                                        <tr>
                                        <th scope="row">
                                            @{
                                                if (expense.DayOftheMonth == DateTime.Now.Day)
                                                {
                                                    <span>today</span>
                                                }
                                                else
                                                {
                                                    <span>Day @expense.DayOftheMonth</span>
                                                }
                                            }
                                        </th>
                                            <td>@expense.ExpensesTotalAmount.ToString("F2")</td>
                                            <td>@expense.SavingThisDay.ToString("F2")</td>
                                            <td><a href="@Url.Action("DayDetails", new { dateOfTheMonth = expense.DayOftheMonth})">Details </a></td>
                                    </tr>
                                }
                                <tr>
                                    <th scope="row">Result</th>
                                        <td><b>@Model.ExpenseSomme.ToString("F2") $</b></td>
                                        <td><b>@Model.SavingSomme.ToString("F2") $</b></td>
                                        <td></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}
</form>
<script src="~/js/wallet.js"></script>