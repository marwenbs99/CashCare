@{
    Layout = null; // ou Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <title>Login</title>
</head>
<body>

    <div class="container">

        <div id="content" class="contentContainer activeContent contentContainerBordered">
            <div class="img">
                <img src="/assets/cashnow.png" />
            </div>

            <input class="username" type="text" id="username" placeholder="Email or mobile number" />

            <input class="pwd" type="password" id="password" placeholder="Password" />

            <a class="forgetPWD" href="/">Forgot password?</a>

            <button class="login-button" type="submit">Log in</button>

            <div class="loginSignUpSeparator ">
                <span class="textInSeparator">or</span>
            </div>

            <button class="signup-button" type="submit">Sign up</button>

            <div class="lang">
                <a target="_blank" href="/" pa-marked="1">English </a> &nbsp;|
                <a target="_blank" href="/" pa-marked="1">Deutsch</a>
            </div>

        </div>       
    </div>

    <footer class="footer">

        <a target="_blank" href="/" pa-marked="1">Contact Us</a>
        <a target="_blank" href="/" pa-marked="1">Privacy</a>
        <a target="_blank" href="/" pa-marked="1">Legal</a>
        <a target="_blank" href="/" pa-marked="1">Policy Updates</a>
        <a target="_blank" href="/" pa-marked="1">Worldwide</a>

    </footer>


</body>
</html>













